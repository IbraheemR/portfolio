---
import Layout from "../layouts/Layout.astro";
import BackgroundCanvas from "../components/BackgroundCanvas.svelte";

import sites from "@data/sites";
---

<Layout>
    <!-- <BackgroundCanvas client:load> -->
        <main class="text-center p-5 flex flex-col items-center">
            <h1 class="text-5xl m-5">Ibraheem Rodrigues</h1>
            <h2 class="text-2xl">Web Development Portfolio</h2>
            <h1><a href="#contact" class="underline">Contact</a></h1>
            <section
                class="grid grid-cols-1 md:grid-cols-2 w-full max-w-xl md:max-w-4xl gap-10 m-5"
            >
                {
                    sites.map(({ name, description, image, link, centered }, i) => (
                        <a class="flex flex-col items-center group" href={link} target="_blank">
                            <div
                                class:list={["bg-red-500 h-64 max-w-md w-full rounded-lg drop-shadow-lg bg-cover bg-clip-content transition-[background-position] duration-500", {
                                    "bg-top group-hover:bg-bottom": !centered,
                                    "bg-center": centered
                                }] }
                                style={`background-image: url('${image}');`}
                            />
                            <h3 class="pt-2 text-xl">{name}</h3>
                            <p>{description}</p>
                        </a>
                    ))
                }
            </section>
            <section id="contact" class="h-[50vh] m-10">
                <h2 class="text-2xl m-5">Contact</h2>
                <p class="m-2">webdev [at] ibraheemrodrigues.com</p>
                <a href="https://github.com/ibraheemr" class="underline m-2">github.com/ibraheemr</a>
            </section>
        </main>
    <!-- </BackgroundCanvas> -->
</Layout>
